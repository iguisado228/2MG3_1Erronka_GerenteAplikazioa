<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gestapp.controllers.TxandakEditatuController"
            style="-fx-background-color: linear-gradient(to bottom right, #e9eef3, #f7f9fc);">

    <VBox spacing="25"
          alignment="CENTER"
          maxWidth="420"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 5);"
          AnchorPane.topAnchor="80"
          AnchorPane.bottomAnchor="80"
          AnchorPane.leftAnchor="80"
          AnchorPane.rightAnchor="80">

        <Label text="Txanda editatu"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="Segoe UI Semibold" size="26.0"/>
            </font>
        </Label>

        <VBox spacing="15" alignment="CENTER_LEFT">

            <VBox spacing="5">
                <Label text="Data"/>
                <DatePicker fx:id="txtDate" prefWidth="360"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Txanda Zenbakia"/>
                <TextField fx:id="txtTxandaZenbakia" prefWidth="360"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Langilea"/>
                <ComboBox fx:id="cmbLangilea" prefWidth="360"/>
            </VBox>

        </VBox>

        <HBox spacing="20" alignment="CENTER">

            <Button text="Eguneratu"
                    prefWidth="140"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8;"
                    onAction="#gorde"/>

            <Button text="Utzi"
                    prefWidth="140"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8;"
                    onAction="#atzera"/>

        </HBox>

    </VBox>

</AnchorPane>
