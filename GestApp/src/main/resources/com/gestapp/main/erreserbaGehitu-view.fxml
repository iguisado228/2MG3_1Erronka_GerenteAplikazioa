<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gestapp.controllers.ErreserbakGehituController"
            style="-fx-background-color: linear-gradient(to bottom right, #e9eef3, #f7f9fc);">

    <VBox spacing="25"
          alignment="CENTER"
          maxWidth="520"
          style="-fx-background-color: white; -fx-padding: 35; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 18, 0, 0, 6);"
          AnchorPane.topAnchor="60"
          AnchorPane.bottomAnchor="60"
          AnchorPane.leftAnchor="60"
          AnchorPane.rightAnchor="60">

        <Label text="Erreserba Gehitu"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="Segoe UI Semibold" size="26"/>
            </font>
        </Label>

        <GridPane hgap="15" vgap="14">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="160"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Bezero Izena:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtBezeroIzena" prefWidth="300"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Telefonoa:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtTelefonoa" prefWidth="300"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Pertsona Kopurua:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPertsonak" prefWidth="300"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Eguna eta Ordua:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <DatePicker fx:id="dpEguna" prefWidth="145"/>
                <TextField fx:id="txtOrdua" prefWidth="145" promptText="HH:mm"/>
            </HBox>

            <Label text="Prezio Totala:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPrezioa" prefWidth="300"
                       GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Faktura Ruta:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="txtFaktura" prefWidth="300"
                       GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Langilea:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cmbLangilea" prefWidth="300"
                      GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="Mahaia:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cmbMahai" prefWidth="300"
                      GridPane.rowIndex="7" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="20" alignment="CENTER">

            <Button text="Gorde"
                    prefWidth="150"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10;"
                    onAction="#gorde"/>

            <Button text="Itzuli"
                    prefWidth="150"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10;"
                    onAction="#atzera"/>

        </HBox>

    </VBox>

</AnchorPane>
