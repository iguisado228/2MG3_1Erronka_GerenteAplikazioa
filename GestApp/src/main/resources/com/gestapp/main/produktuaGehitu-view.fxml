<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gestapp.controllers.ProduktuakGehituController"
            style="-fx-background-color: linear-gradient(to bottom right, #e9eef3, #f7f9fc);">

    <VBox spacing="25" alignment="CENTER" maxWidth="520"
          style="-fx-background-color: white;
                 -fx-padding: 35;
                 -fx-background-radius: 18;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 18, 0, 0, 6);"
          AnchorPane.topAnchor="60"
          AnchorPane.bottomAnchor="60"
          AnchorPane.leftAnchor="60"
          AnchorPane.rightAnchor="60">

        <Label text="Produktua Gehitu"
               style="-fx-font-size:26px; -fx-font-weight:bold;"/>

        <GridPane hgap="15" vgap="14">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="160"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Izena:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtIzena" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Prezioa:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPrezioa" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Mota:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtMota" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Stock:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtStock" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="20">
            <Button text="Gorde" prefWidth="150" onAction="#gorde"
                    style="-fx-background-color:#2ecc71; -fx-text-fill:white;"/>
            <Button text="Utzi" prefWidth="150" onAction="#atzera"
                    style="-fx-background-color:#e74c3c; -fx-text-fill:white;"/>
        </HBox>

    </VBox>
</AnchorPane>
