    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">

        <TextField fx:id="txtIzena" promptText="Izena"/>
        <TextField fx:id="txtPrezioa" promptText="Prezioa"/>
        <TextField fx:id="txtMota" promptText="Mota"/>
